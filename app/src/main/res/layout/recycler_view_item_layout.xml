<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:paddingTop="@dimen/small">

    <androidx.cardview.widget.CardView
        android:id="@+id/recipe_name_cv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        card_view:cardCornerRadius="@dimen/medium"
        card_view:cardBackgroundColor="@color/recipe_bg"
        card_view:contentPaddingLeft="100dp"
        card_view:contentPaddingRight="100dp"
        card_view:contentPaddingTop="30dp"
        card_view:contentPaddingBottom="30dp">

        <TextView
            android:id="@+id/recipe_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recipe name"
            android:textColor="@color/recipe_text"
            android:textSize="25sp" />

    </androidx.cardview.widget.CardView>
</LinearLayout>